<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.car.mapper.master.CarMenuMapper">
    
    <resultMap type="com.ruoyi.car.domain.CarMenuEntity" id="CarMenuResult">
        <result property="id"    column="id"    />
        <result property="title"    column="title"    />
        <result property="showOrder"    column="showOrder"    />
        <result property="delFlag"    column="delFlag"    />
        <result property="createTime"    column="createTime"    />
        <result property="isShow"    column="isShow"    />
        <result property="canDel"    column="canDel"    />
        <result property="linkUrl"    column="linkUrl"    />
        <result property="linkType"    column="linkType"    />
        <result property="content"    column="content"    />
        <result property="ogTitle"    column="ogTitle"    />
        <result property="ogImage"    column="ogImage"    />
        <result property="ogDesp"    column="ogDesp"    />
        <result property="parentId"    column="parentId"    />
    </resultMap>

    <sql id="selectCarMenuVo">
        select id, title, showOrder, delFlag, createTime, isShow, canDel, linkUrl, linkType, content, ogTitle, ogImage, ogDesp, parentId from car_menu
    </sql>

    <select id="selectCarMenuList" parameterType="com.ruoyi.car.domain.CarMenuEntity" resultMap="CarMenuResult">
        <include refid="selectCarMenuVo"/>
        <where>  
            <if test="title != null  and title != ''"> and title like concat('%', #{title}, '%')</if>
            <if test="showOrder != null "> and showOrder = #{showOrder}</if>
            <if test="delFlag != null "> and delFlag = #{delFlag}</if>
            <if test="createTime != null "> and createTime = #{createTime}</if>
            <if test="isShow != null "> and isShow = #{isShow}</if>
            <if test="canDel != null "> and canDel = #{canDel}</if>
            <if test="linkUrl != null  and linkUrl != ''"> and linkUrl = #{linkUrl}</if>
            <if test="linkType != null "> and linkType = #{linkType}</if>
            <if test="content != null  and content != ''"> and content = #{content}</if>
            <if test="ogTitle != null  and ogTitle != ''"> and ogTitle like concat('%', #{ogTitle}, '%')</if>
            <if test="ogImage != null  and ogImage != ''"> and ogImage = #{ogImage}</if>
            <if test="ogDesp != null  and ogDesp != ''"> and ogDesp like concat('%', #{ogDesp}, '%')</if>
            <if test="parentId != null "> and parentId = #{parentId}</if>
        </where>
        order by showOrder asc, createTime desc
    </select>
    
    <select id="selectParentMenuList" resultMap="CarMenuResult">
        <include refid="selectCarMenuVo"/>
        where parentId is null and delFlag = 0
        order by showOrder asc, createTime desc
    </select>
    
    <select id="selectCarMenuById" parameterType="Long" resultMap="CarMenuResult">
        <include refid="selectCarMenuVo"/>
        where id = #{id}
    </select>
    
    <select id="selectMaxShowOrder" resultType="java.lang.Integer">
        select COALESCE(MAX(showOrder), 0) from car_menu where delFlag = 0
    </select>
        
    <insert id="insertCarMenu" parameterType="com.ruoyi.car.domain.CarMenuEntity" useGeneratedKeys="true" keyProperty="id">
        insert into car_menu
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">title,</if>
            <if test="showOrder != null">showOrder,</if>
            <if test="delFlag != null">delFlag,</if>
            <if test="createTime != null">createTime,</if>
            <if test="isShow != null">isShow,</if>
            <if test="canDel != null">canDel,</if>
            <if test="linkUrl != null">linkUrl,</if>
            <if test="linkType != null">linkType,</if>
            <if test="content != null">content,</if>
            <if test="ogTitle != null">ogTitle,</if>
            <if test="ogImage != null">ogImage,</if>
            <if test="ogDesp != null">ogDesp,</if>
            <if test="parentId != null">parentId,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">#{title},</if>
            <if test="showOrder != null">#{showOrder},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="isShow != null">#{isShow},</if>
            <if test="canDel != null">#{canDel},</if>
            <if test="linkUrl != null">#{linkUrl},</if>
            <if test="linkType != null">#{linkType},</if>
            <if test="content != null">#{content},</if>
            <if test="ogTitle != null">#{ogTitle},</if>
            <if test="ogImage != null">#{ogImage},</if>
            <if test="ogDesp != null">#{ogDesp},</if>
            <if test="parentId != null">#{parentId},</if>
         </trim>
    </insert>

    <update id="updateCarMenu" parameterType="com.ruoyi.car.domain.CarMenuEntity">
        update car_menu
        <trim prefix="SET" suffixOverrides=",">
            <if test="title != null and title != ''">title = #{title},</if>
            <if test="showOrder != null">showOrder = #{showOrder},</if>
            <if test="delFlag != null">delFlag = #{delFlag},</if>
            <if test="createTime != null">createTime = #{createTime},</if>
            <if test="isShow != null">isShow = #{isShow},</if>
            <if test="canDel != null">canDel = #{canDel},</if>
            <if test="linkUrl != null">linkUrl = #{linkUrl},</if>
            <if test="linkType != null">linkType = #{linkType},</if>
            <if test="content != null">content = #{content},</if>
            <if test="ogTitle != null">ogTitle = #{ogTitle},</if>
            <if test="ogImage != null">ogImage = #{ogImage},</if>
            <if test="ogDesp != null">ogDesp = #{ogDesp},</if>
            <!-- 使用 choose 来处理 parentId，包括 null 值的情况 -->
            <!-- 由于前端总是会传递 parentId 字段（要么是 null，要么是数字），所以这里总是更新 -->
            <choose>
                <when test="parentId != null">parentId = #{parentId},</when>
                <otherwise>parentId = null,</otherwise>
            </choose>
        </trim>
        where id = #{id}
    </update>

    <update id="updateCarMenuShowStatus">
        update car_menu set isShow = #{isShow} where id = #{id}
    </update>

    <update id="updateCarMenuOrder">
        update car_menu set showOrder = #{showOrder} where id = #{id}
    </update>

    <delete id="deleteCarMenuById" parameterType="Long">
        delete from car_menu where id = #{id}
    </delete>

    <delete id="deleteCarMenuByIds" parameterType="String">
        delete from car_menu where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
