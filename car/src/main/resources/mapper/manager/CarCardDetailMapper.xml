<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cc.carce.sale.mapper.manager.CarCardDetailMapper">

    <resultMap id="BaseResultMap" type="cc.carce.sale.entity.CarCardDetailEntity">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="orderId" property="orderId" jdbcType="BIGINT"/>
        <result column="cardId" property="cardId" jdbcType="BIGINT"/>
        <result column="cardName" property="cardName" jdbcType="VARCHAR"/>
        <result column="ticketCode" property="ticketCode" jdbcType="VARCHAR"/>
        <result column="redeemed" property="redeemed" jdbcType="INTEGER"/>
        <result column="redeemedTime" property="redeemedTime" jdbcType="TIMESTAMP"/>
        <result column="createTime" property="createTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, orderId, cardId, cardName, ticketCode, redeemed, redeemedTime, createTime
    </sql>

    <select id="countByTicketCode" resultType="int">
        SELECT COUNT(*) FROM car_card_detail WHERE ticketCode = #{ticketCode}
    </select>

    <select id="selectByOrderId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM car_card_detail
        WHERE orderId = #{orderId}
        ORDER BY id ASC
    </select>
</mapper>
